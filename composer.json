{
  "name": "develpr/hmac",
  "homepage": "http://develpr.github.io/hmac",
  "description": "A HMAC library for signing and verifying requests based on AWS signature generation",
  "keywords": ["hmac","security","develpr","sha256"],
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Kevin Mitchell",
      "homepage": "http://www.develpr.com"
    }
  ],
  "require": {
    "php": ">=5.5",
    "guzzlehttp/guzzle": "~5.3|~6.0.1|~6.1",
    "guzzlehttp/psr7": "~1.0",
    "symfony/http-foundation": "2.7.*"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "mockery/mockery": "~0.9.1",
    "symfony/http-foundation": "2.7.*"
  },
  "autoload": {
    "psr-4": {
      "Develpr\\Hmac\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Develpr\\Tests\\": "tests"
    }
  }
}
